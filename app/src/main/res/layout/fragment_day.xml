<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rs.devana.labs.studentinfo.presentation.fragments.DayFragment">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lecturesListView"
        android:dividerHeight="@dimen/abc_control_corner_material"
        android:clickable="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listEmptyView"
        android:text="@string/noClassesToday"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_below="@id/lecturesListView"/>

</RelativeLayout>
